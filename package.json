    "upath": "1.1.0"
  },
  "devDependencies": {
    "chai": "4.1.2",
    "codecov": "3.0.2",
    "cz-conventional-changelog": "2.1.0",
    "mocha": "5.2.0",
    "nyc": "11.8.0",
    "semantic-release": "^15.5.0",
    "standard": "11.0.1"
  },
  "scripts": {
