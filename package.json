    "globby": "11.0.0",
    "lodash": "4.17.15",
    "upath": "1.2.0"
  },
  "devDependencies": {
    "chai": "4.2.0",
    "codecov": "3.6.5",
    "conventional-changelog-metahub": "4.0.0",
    "cz-conventional-changelog": "3.1.0",
    "mocha": "7.0.1",
    "nyc": "15.0.0",
    "semantic-release": "17.0.4",
    "standard": "14.3.1",
    "@semantic-release/changelog": "5.0.0",
    "@semantic-release/git": "9.0.0"
  },
  "scripts": {
